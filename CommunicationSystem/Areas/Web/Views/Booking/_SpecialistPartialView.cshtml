@model BookingViewModel
@if (Model.Specialists != null)
{
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="text-primary text-uppercase">// @Model.Specialists.Count() Result(s) Found //</h6>
                <h1 class="mb-5">Expert Technicians</h1>
            </div>
            @foreach (var groupedSpecialists in Model.Specialists)
            {
                <div class="row g-4">
                    @foreach (var specialist in groupedSpecialists)
                    {
                        <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="team-item">
                                    <div class="position-relative overflow-hidden">
                                        <img class="img-fluid" src="~/img/@specialist.ImageURL" alt="">
                                        <div class="team-overlay position-absolute start-0 top-0 w-100 h-100">
                                            <a class="btn btn-square mx-1" href="@specialist.FacebookHandle"><i class="fab fa-facebook-f"></i></a>
                                            <a class="btn btn-square mx-1" href="@specialist.TwitterHandle"><i class="fab fa-twitter"></i></a>
                                            <a class="btn btn-square mx-1" href="@specialist.InstagramHandle"><i class="fab fa-instagram"></i></a>
                                        </div>
                                    </div>
                                    <div class="bg-light text-center p-4">
                                        <h5 class="fw-bold mb-0">@specialist.FullName</h5>
                                        @if (specialist.Speciality != null)
                                        {
                                            <small>
                                                @specialist.Speciality.TypeOfService
                                            </small>
                                        }
                                    <h5 class="fw-bold mb-0"><a asp-route-id="@specialist.Id" asp-controller="booking" asp-area="web" asp-action="viewdetails">View Profile</a></h5>

                                    </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
}