@model UserDTO
<div class="card card-plain">
    <div class="card-header pb-0 text-start">
        <h4 class="font-weight-bolder">Sign Up</h4>
        <p class="mb-0">Enter your email and password to sign in</p>
    </div>
    <div class="card-body">
        <form role="form" method="post">
            <div class="mb-3">
                <div class="row">
                    <div class="col-md-6">
                        <span>I own a car</span> &nbsp; <input checked id="chk_car_owner" type="radio" name="option" class="form-control-sm" />
                    </div>
                    <div class="col-md-6">
                        <span>I am an engineer</span>&nbsp; <input id="chk_car_engineer" type="radio" name="option" class="form-control-sm" />
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <input asp-for="FullName" class="form-control form-control-lg" placeholder="Full Names">
            </div>
            <div class="mb-3">
                <textarea asp-for="Address" id="home_address" class="form-control form-control-lg" placeholder="Address"></textarea>
            </div>
            <div class="mb-3" id="wrk_address" style="display:none;">
                <textarea asp-for="WorkShopAddress" id="wrk_address" class="form-control form-control-lg" placeholder="WorkShop Address"></textarea>
            </div>
            <div class="mb-3" id="wrk-experience" style="display:none;">
                <input asp-for="YearOfExperience" id="wrk-experience" type="number" class="form-control form-control-lg" placeholder="Years of Experience">
            </div>
            <div class="mb-3">
                <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="Email">
            </div>
            <div class="mb-3">
                <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Password">
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-lg btn-primary btn-lg w-100 mt-4 mb-0">Sign Up</button>
            </div>
        </form>
    </div>
    <div class="card-footer text-center pt-0 px-lg-2 px-1">
        <p class="mb-4 text-sm mx-auto">
            Already a have an account?
            <a asp-action="index" class="text-primary text-gradient font-weight-bold">Sign In</a>
        </p>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#wrk_address, #wrk-experience').hide();
            $('input[type=radio][name=option]').change(function () {
                if (this.id === 'chk_car_engineer') {
                    $('#wrk_address, #wrk-experience, #home_address').val("");
                    $('#wrk_address, #wrk-experience').show();
                    $('#home_address').hide();
                    
                } else if (this.id === 'chk_car_owner') {
                    $('#home_address').show();
                    $('#wrk_address, #wrk-experience').hide();
                    $('#wrk_address, #wrk-experience').val("");
                }
            });

       
        });
    </script>
}